<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net10.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <RootNamespace>Metal.NET</RootNamespace>
  </PropertyGroup>

  <!-- Source Generator reference -->
  <ItemGroup>
    <ProjectReference Include="..\Metal.NET.Generator\Metal.NET.Generator.csproj"
                      OutputItemType="Analyzer"
                      ReferenceOutputAssembly="false" />
  </ItemGroup>

  <!-- Feed metal-cpp headers directly to the generator -->
  <ItemGroup>
    <AdditionalFiles Include="metal-cpp\**\*.hpp" />
  </ItemGroup>

</Project>
