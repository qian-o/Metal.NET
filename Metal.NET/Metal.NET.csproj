<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>$(StandardTargetFramework)</TargetFramework>
        <NoWarn>IDE0130</NoWarn>
    </PropertyGroup>

    <PropertyGroup Condition="'$(Configuration)' == 'Release'">
        <Title>$(AssemblyName)</Title>
        <Version>1.0.1</Version>
        <Authors>qian-o</Authors>
        <Copyright>MIT</Copyright>
        <PackageTags>metal;apple;gpu;graphics;macos</PackageTags>
        <Description>C# bindings for Apple's Metal graphics API, auto-generated from metal-cpp headers.</Description>
        <RepositoryUrl>https://github.com/qian-o/Metal.NET</RepositoryUrl>
        <PackageProjectUrl>https://github.com/qian-o/Metal.NET</PackageProjectUrl>
        <PackageLicenseFile>LICENSE</PackageLicenseFile>
        <PackageReadmeFile>README.md</PackageReadmeFile>
        <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    </PropertyGroup>

    <ItemGroup Condition="'$(Configuration)' == 'Release'">
        <None Include="..\LICENSE">
            <Pack>True</Pack>
            <PackagePath>\</PackagePath>
        </None>

        <None Include="..\README.md">
            <Pack>True</Pack>
            <PackagePath>\</PackagePath>
        </None>
    </ItemGroup>

</Project>
